<?xml version="1.0" encoding="utf-8" ?>
<root>
    <layer id="terrain">
        <entity id="big_terrain" x="256" y="256">
            <renderComponent>
                <sprite active="1">meadow-green</sprite>
            </renderComponent>
        </entity>
    </layer>
    <layer id="ground">
        <entity id="cow" x="200" y="200">
            <behaviorComponent>game.behaviors::CowBehavior</behaviorComponent>
            <renderComponent>
                <anim atlas="cow-walk" fps="6">cow_walk_up</anim>
                <anim atlas="cow-walk" fps="6">cow_walk_down</anim>
                <anim atlas="cow-walk" fps="6">cow_walk_left</anim>
                <anim atlas="cow-walk" fps="6">cow_walk_right</anim>
            </renderComponent>
            <inputComponent>mouse</inputComponent>
            <physicsComponent>
                <velocity>2</velocity> <!-- pixels per frame -->
                <collider type="circle" radius="20"/>
            </physicsComponent>
            <navigationComponent>direct</navigationComponent>
        </entity>

